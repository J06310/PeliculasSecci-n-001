<div id="movieModal" class="modal">
    <div class="modal-content">
        <span class="close">×</span>
        <img id="modalPoster" src="" alt="Poster">
        <div class="info">
            <h2 id="modalTitle"></h2>
            <p><i class="fas fa-calendar"></i> <span id="modalYear"></span></p>
            <p><i class="fas fa-film"></i> <span id="modalGenre"></span></p>
            <p><i class="fas fa-clock"></i> <span id="modalDuration"></span></p>
            <p><i class="fas fa-book"></i> <span id="modalSynopsis"></span></p>
            <a id="modalLink" href="https://example.com" target="_blank" class="link">
                <button style="background-color: #FF0000; color: white; padding: 10px 100px; border: 2px solid #FF4C4C; border-radius: 8px; cursor: pointer; transition: all 0.3s ease-in-out; box-shadow: 0 0 15px rgba(255, 0, 0, 0.5); font-size: 16px; font-weight: bold; white-space: nowrap; overflow: hidden;">
                    VER PELÍCULA
                </button>
            </a>
        </div>
